<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.rit.columcross.permissiongranted"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.rit.columcross.permissiongranted.FormsActivity"
            android:label="@string/forms_activity_title"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.rit.columcross.permissiongranted.ViewForm" />
        <activity android:name="edu.rit.columcross.permissiongranted.ViewSignature" />
        <activity
            android:name="edu.rit.columcross.permissiongranted.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="edu.rit.columcross.permissiongranted.SignaturesActivity"
            android:label="@string/sigs_activity_title" />
        <activity
            android:name="edu.rit.columcross.permissiongranted.AddEditForm"
            android:label="@string/title_activity_new_form" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="edu.rit.columcross.permissiongranted.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>